{% comment %} <div class="page-full page-content black-five-bg"> {% endcomment %}
<div class="page-full black-five-bg">
  {% comment %}
    {%- render 'breadcrumbs' -%}
    <header class="section-header">
      <h1 class="section-header__title">{{ page.title | escape }}</h1>
    </header>
  {% endcomment %}
    {%- if section.settings.countdown_target_show -%}
      <div class="black-count-down">
        <div class="black-box">
          <div class="black-number" id="countdowns_hours">00</div>
          <div class=font>HRS</div>
        </div>
        <div class="black-box">
          <div class="black-number" id="countdowns_minutes">00</div>
          <div class=font>MIN</div>
        </div>
        <div class="black-box">
          <div class="black-number" id="countdowns_seconds">00</div>
          <div class=font>SEC</div>
        </div>
        <div class="black-box">
          <div class="black-number" id="countdowns_milliseconds">00</div>
          <div class=font>MSE</div>
        </div>
      </div>
    </div>
    {%- style -%}
      .black-box{
        background-image: url({{ section.settings.image2 | img_url: 'master' }});
      }
      .black-box .black-number{
        color: {{ section.settings.color_font }}
      }
      .black-box .font{
        color: {{ section.settings.color_font2 }}
      }
    {%- endstyle -%}
    {%- endif -%}  
    <div class="rte--nomargin" id="beijingtuziyuan" data-imgbg="{{ section.settings.image | img_url: 'master' }}">
      {{ page.content }}
    </div>
</div>
{% schema %}
{
  "name": "Black-Five-Flash-Sale",
  "class": "index-section Black-Five-Flash-Sale",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "背景图"
    },
    {
      "type": "checkbox",
      "label": "倒计时",
      "id": "countdown_target_show",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "image2",
      "label": "倒计时背景图"
    },
    {
      "type": "color",
      "id": "color_font",
      "label": "倒计时数字",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "color_font2",
      "label": "倒计时单位",
      "default": "#ffffff"
    }
  ]
}
{% endschema %}
<script>
    // 尝试获取元素
    var beijingtuziyuan = document.getElementById('beijingtuziyuan');
    {% comment %} var dynamicbg = $('.Black-Five-Flash-Sale').parent()[0]; {% endcomment %}
    // 检查是否成功获取到元素
    if (beijingtuziyuan) {
      // 获取 data-imgbg 属性的值
      var dataImgBgValue = beijingtuziyuan.getAttribute('data-imgbg');
      var dynamicbg = document.body
      dynamicbg.style.backgroundImage = "url("+dataImgBgValue+")";
      {% comment %} dynamicbg.style.backgroundRepeat = 'no-repeat'; {% endcomment %}
      dynamicbg.style.backgroundSize = 'contain';
    }
</script>
<style>
  .black-count-down{
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
  }
  @media only screen and (min-width: 769px) {
    .black-box{
      {% comment %} border-right: 1px solid #fff; {% endcomment %}
      {% comment %} padding: 0 20px; {% endcomment %}
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: 110px;
      height: 125px;
      background-repeat: no-repeat;
      background-size: 100% 100%;
      margin: 0 20px;
    }
    {% comment %} .black-box:last-child{
      border-right: none;
      padding-right: 0;
    } {% endcomment %}
    .black-count-down .black-number {
      width: 100px;
      font-size: 70px;
      line-height: 60px;
      font-weight: 600;
      text-align: center;
    }
    .black-count-down .font {
      font-size: 16px;
      font-weight: 600;
    }
  }
  
  @media only screen and (max-width:768px){
    .black-box{
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: 70px;
      height: 85px;
      background-repeat: no-repeat;
      background-size: 100% 100%;
      margin: 0 10px;
    }
    {% comment %} .black-box:last-child{
      border-right: none;
      padding-right: 0;
    } {% endcomment %}
    .black-count-down .black-number {
      width: 50px;
      font-size: 35px;
      line-height: 40px;
      height: 40px;
      font-weight: 600;
      text-align: center;
    }
    .black-count-down .font {
      font-size: 16px;
      font-weight: 600;
    }
  }
  </style>