  {%- render 'breadcrumbs' -%}
</header> {% endcomment %}
{% assign has_mobile_image = false %}
{%- for block in section.blocks -%}
  {% if block.settings.mobile_img != blank and block.type == 'bannder'  %}
    {% assign has_mobile_image = true %}
  {% endif %}
{%- endfor -%}
<div class="main-feathers-sofa">
  {%- for block in section.blocks -%}
    {% case block.type %}
      {% when 'bannder'%}
        <div class="bannders_img feathers-margin-bottom">
          <a class="bannder_a" href="{{ block.settings.links }}"></a>
          <img class="shemei_img{% if has_mobile_image %} small--hide{% endif %}" src="{{ block.settings.bannder_img | img_url: 'master' }}" alt="img">
          {%- if has_mobile_image -%}
            <img class="shemei_img medium-up--hide" src="{{ block.settings.mobile_img | img_url: 'master' }}" alt="img">
          {% endif %}
          <div class="hander-title-h6">
            <div class="title-t">25Home<div class="R">R</div></div>
            <div class="title-f">Original Design by</div>
          </div>
          <div class="bannder_code">
            <div class="bannder_title1">feathers sofa</div>
            <div class="bannder_title2">EXTRA <span style="color:#FFD68C">{{ block.settings.banndertitle }}</span></div>
            <div class="bannder_title3">USE CODE: {{ block.settings.banndertitle2 }} <div class="shopnow">shop now</div></div>
          </div>
        </div>
    {% endcase %}
  {%- endfor -%}


  <div class="mobiledis">
    <div class="width_box carousel-wrapper feathers-margin-bottom">
      <div class="swiper">
        <div class="swiper-wrapper">
          {%- for block in section.blocks -%}
            {% case block.type %}
              {% when 'swiper_wrapper'%}
                <div class="swiper-slide">
                  <a href="{{ block.settings.swiper_link }}">
                    <img src="{{ block.settings.swiper_img | img_url: 'master' }}" class="{% if has_mobile_image %} small--hide{% endif %}" alt="img">
                    {%- if has_mobile_image -%}
                      <img class="medium-up--hide" src="{{ block.settings.mobile_img | img_url: 'master' }}" alt="{{ block.settings.mobile_img.alt }}">
                    {% endif %}
                  </a>
                </div>
              {% endcase %}
            {%- endfor -%}
        </div>
        <!-- <div class="swiper-button-prev swiper-button-top"><</div>
        <div class="swiper-button-next swiper-button-top">></div> -->
      </div>
    </div>
    {%- for block in section.blocks -%}
      {% case block.type %}
        {% when 'feathers_Equilibrium'%}
        <div class="feathers-Equilibrium feathers-margin-bottom">
          <img class="lazyload shemei_img {% if has_mobile_image %} small--hide{% endif %}" src="{{ block.settings.Equilibrium_img | img_url: 'master' }}" alt="img">
          {%- if has_mobile_image -%}
            <img class="shemei_img medium-up--hide" src="{{ block.settings.Equilibrium_mobile_img | img_url: 'master' }}" alt="img">
          {% endif %}
        </div>
      {% endcase %}
    {%- endfor -%}
  </div>

  {%- for block in section.blocks -%}
    {% case block.type %}
      {% when 'feathers_box'%}
      <div class="width_box feathers-box feathers-margin-bottom {% if has_mobile_image %} small--hide{% endif %}">
        <div class="feathers-feature-box">
          <div class="rows-item text-rights">
            <div class="item-title">{{ block.settings.one_title }}<div class="item-title-bg">25 Home</div></div>
            <div class="item-font">{{ block.settings.one_content }}</div>
          </div>
          <img class="items_img" src="{{ block.settings.one_img | img_url: 'master' }}" alt="img">
        </div>
        <div class="feathers-feature-box">
          <img class="items_img text-rights" src="{{ block.settings.two_img | img_url: 'master' }}" alt="img">
          <div class="rows-item">
            <div class="item-title">{{ block.settings.two_title }}<div class="item-title-bg">25 Home</div></div>
            <div class="item-font">{{ block.settings.two_content }}</div>
            <div class="item-btn"><a href="{{ block.settings.two_link }}">shop now</a></div>
          </div>
        </div>
        <div class="feathers-feature-box">
          <div class="rows-item text-rights">
            <div class="item-title">{{ block.settings.three_title }}<div class="item-title-bg">25 Home</div></div>
            <div class="item-font">{{ block.settings.three_content }}</div>
          </div>
          <img class="items_img" src="{{ block.settings.three_img | img_url: 'master' }}" alt="img">
        </div>
      </div>
      {%- if has_mobile_image -%}
        <div class="width_box feathers-box_mobile medium-up--hide">
          <div class="feathers-feature-box">
            <div class="rows-item">
              <div class="item-title">{{ block.settings.one_title }}<div class="item-title-bg">25 Home</div></div>
              <div class="item-font">{{ block.settings.one_content }}</div>
            </div>
            <img class="items_img" src="{{ block.settings.one_img | img_url: 'master' }}" alt="img">
          </div>
          <div class="feathers-feature-box">
            <div class="rows-item">
              <div class="item-title">{{ block.settings.two_title }}<div class="item-title-bg">25 Home</div></div>
              <div class="item-font">{{ block.settings.two_content }}</div>
            </div>
