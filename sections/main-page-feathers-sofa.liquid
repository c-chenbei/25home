          <div class="swiper-slide"><img src="{{ block.settings.ins_img5 | img_url: 'master' }}" alt="img"></div>
        </div>
      </div>
    {% endcase %}
  {%- endfor -%}

  <div class="feathers-footer">
    <div class="width_box footer-font">
      <div class="footer-left">
        <div class="footer-handers"> 
          <div class="footer-handers-title">Frequently</div>
          <div class="footer-handers-title">Asked Questions</div>
          <div class="footer-handers-title2">Still having questions? Visit our <a href="/pages/faqs" target="_blank">FAQs</a> or <a href="/pages/contact" target="_blank">Contact Us</a>.</div>
        </div>
        <div class="footer-btns pc-footer-btns" id="backToTopBtns">back to top</div>
      </div>
      <div class="footer-right">
        {%- for block in section.blocks -%}
          {% case block.type %}
            {% when 'question'%}
              <div class="accordion-item footer-right-item">
                <button type="button" class="accordion-header">
                  <span class="toggle-title">{{ block.settings.title }}</span>
                  <span class="toggle-icon">+</span>
                </button>
                <div class="accordion-content" >
                    {{ block.settings.text }}
                </div>
              </div>
          {% endcase %}
        {%- endfor -%}
      </div>
      <div class="mo-footer-btns" id="backToTopBtns">back to top</div>
    </div>
  </div>
</div>

