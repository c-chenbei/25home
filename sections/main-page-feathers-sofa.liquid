              <div class="item-font">{{ block.settings.one_content }}</div>
              <div class="item-btn"><a href="{{ block.settings.Diverseone_link }}">shop now</a></div>
            </div>
            <img class="items_img" src="{{ block.settings.Diverseone_img | img_url: 'master' }}" alt="img">
          </div>
          <div class="feathers-feature">
            <div class="rows-item">
              <div class="item-title item-title-s">{{ block.settings.two_title }}</div>
              <div class="item-font">{{ block.settings.two_content }}</div>
              <div class="item-btn"><a href="{{ block.settings.Diversetwo_link }}">shop now</a></div>
            </div>
            <img class="items_img" src="{{ block.settings.Diversetwo_img | img_url: 'master' }}" alt="img">
          </div>
          <div class="feathers-feature">
