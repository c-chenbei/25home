                            <img src="{{ block.settings.icon_img1 | img_url: 'master' }}" alt="img" >
                            <img src="{{ block.settings.icon_img2 | img_url: 'master' }}" alt="img" >
                            <img src="{{ block.settings.icon_img3 | img_url: 'master' }}" alt="img" >
                            <img src="{{ block.settings.icon_img4 | img_url: 'master' }}" alt="img" >
